<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<mmforum_import>
	<software>
		<name>phpBB 3</name>
		<icon>EXT:mm_forum_import/Resources/Public/SoftwareIcons/phpbb.png</icon>
		<importSource>database</importSource>
	</software>
	<databaseRequirement>
		<options>
			<option name="queryPrefix">yes</option>
			<option name="queryCharset">yes</option>
		</options>
		<requiredTables>
			<table>###PREFIX###users</table>
			<table>###PREFIX###groups</table>
			<table>###PREFIX###user_group</table>
			<table>###PREFIX###forums</table>
			<table>###PREFIX###forums_access</table>
			<table>###PREFIX###topics</table>
			<table>###PREFIX###topics_watch</table>
			<table>###PREFIX###attachments</table>
			<table>###PREFIX###posts</table>
			<table>###PREFIX###ranks</table>
			<table>###PREFIX###reports</table>
			<table>###PREFIX###reports_reasons</table>
			<table>###PREFIX###bbcodes</table>
			<table>###PREFIX###poll_options</table>
			<table>###PREFIX###poll_votes</table>
			<table>###PREFIX###privmsgs</table>
			<table>###PREFIX###profile_fields</table>
			<table>###PREFIX###profile_fields_lang</table>
			<table>###PREFIX###profile_lang</table>
		</requiredTables>
		<truncateTables>
			<table>fe_users</table>
			<table>fe_groups</table>
			<table>tx_mmforum_attachments</table>
			<table>tx_mmforum_cache</table>
			<table>tx_mmforum_favorites</table>
			<table>tx_mmforum_forummail</table>
			<table>tx_mmforum_forums</table>
			<table>tx_mmforum_pminbox</table>
			<table>tx_mmforum_polls</table>
			<table>tx_mmforum_polls_answers</table>
			<table>tx_mmforum_polls_votes</table>
			<table>tx_mmforum_post_alert</table>
			<table>tx_mmforum_postparser</table>
			<table>tx_mmforum_postqueue</table>
			<table>tx_mmforum_posts</table>
			<table>tx_mmforum_posts_text</table>
			<table>tx_mmforum_postsread</table>
			<table>tx_mmforum_ranks</table>
			<table>tx_mmforum_searchresults</table>
			<table>tx_mmforum_syntaxhl</table>
			<table>tx_mmforum_topicmail</table>
			<table>tx_mmforum_topics</table>
			<table>tx_mmforum_userconfig</table>
			<table>tx_mmforum_userfields</table>
			<table>tx_mmforum_smilies</table>
			<table>tx_mmforum_userfields_contents</table>
			<table>tx_mmforum_wordlist</table>
			<table>tx_mmforum_wordmatch</table>
		</truncateTables>
	</databaseRequirement>
	<import>
		<importerClass>Tx_MmForumImport_Domain_Service_Import_PhpBB3</importerClass>
		<importItems>
			<importItem>ranks</importItem>
			<importItem>groups</importItem>
			<importItem>users</importItem>
			<importItem>forums</importItem>
			<importItem>topics</importItem>
			<importItem>posts</importItem>
			<importItem>messages</importItem>
			<importItem>profiles</importItem>
			<importItem>reports</importItem>
			<importItem>smilies</importItem>
		</importItems>
	</import>
	<fileImport>
		<options>
			<option name="enable">yes</option>
		</options>
		<allowedInterfaces>
			<interface>local</interface>
			<interface>ftp</interface>
		</allowedInterfaces>
		<clearDirectories>
			<directory>uploads/tx_mmforum/</directory>
		</clearDirectories>
	</fileImport>
</mmforum_import>
